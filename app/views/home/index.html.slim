	ul id="navbar"
		li 
			a href="#about"
				i About this 
				span BOOK
		li 
			a href="#quotes"
				i Favorite 
				span QUOTES

div class="container"
	div id="cover"
		div id="coverBack"
			=image_tag("cover.jpg", :id => "coverImg")
		a href="#" class="btn btn-blue btn-review" 
			span class="icon-bubble" ADD A REVIEW
	div id="content"
		div id="about"
			i About this 
			span BOOK
		div id="bookDescription"
			div id="buyBox"
				div class="boxItem"
					span class="boxItemSpan" Price $#{@book.products[0].price}
					a href="#" class="btn btn-blue btn-right" 
						span class="icon-basket" BUY eBOOK
				div class="boxItem" id="boxCardItem"
					span class="boxItemSpan" Price $
					span class="boxItemSpan" id="bookPrice" #{@book.products[1].price}
					a href="#" class="btn btn-blue btn-right" ADD TO CARD
					div class="clear"
					div class="selectBox" 
						span #{@book.products[1].type}, $#{@book.products[1].price}
						i
					ul class="selectList"
					  - for @product in @book.products do
					    li*{'data-price'=> @product.price}
					      span #{@product.type}, $#{@product.price}					
				div class="boxItem"	
					div class="selectBox" 
						span BUY ELSEWHERE
						i
			= @book.description
	
		ul id="bookDetails"
			li
				b ISBN: 
				span = @book.isbn
		
			li
				b FORMAT: 
				span = @book.format
			li
				b PAGES: 
				span = @book.pages
			li 
				b PUBLICATION DATE: 
				span = @book.publication_date
