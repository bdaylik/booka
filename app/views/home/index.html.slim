div id="quotes"
	div class="container"
		div id="quoteTitle"
			i Favorite
			span QUOTES
		a href="#" class="btn btn-blue" 
			span class="icon-quote" ADD A QUOTE
		div id="quoteContainer"
			- for @quote in @book.quotes do
				div class="quoteShow" 
					i = @quote.quote

		div class="clear"
		a href="#" id="allQuotesBut" class="btn btn-white" 
			span class="icon-expand" VIEW ALL QUOTES
	
